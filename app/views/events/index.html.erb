<h2><%= link_to "Back To User List" ,root_path %> |
<%= link_to "Go back",user_path(@user) %><h2>

<h1> List of Events</h1>
   
  <h2>Recent Event</h2>
  <ol>
    <% @recent_events.each do |event| %>
       <% if event.invited_users.include?(@user) || @user.id == event.creator_id %>
         <%= render event %>
       <% end %>
    <% end %>
 </ol>

  <h2>Old Events</h2>
  <ol>
    <% @old_events.each do |event| %>
      <% if event.invited_users.include?(@user) || @user.id == event.creator_id %>
         <%= render event %>
       <% end %>
    <% end %>
 </ol>

 
