<%= form_with model:@user, data: {turbo:false} do |f| %>
  <%= render 'shared/error_message',object: f.object %>
   <%= f.label :name %><br>
   <%= f.text_field :name %><br><br>

   <%= f.label :email %><br>
   <%= f.text_field :email , placeholder:"example@gmail.com" %><br><br>
   
   <%= f.label :password %><br>
   <%= f.password_field :password %><br><br>

   <%= f.label :password_confirmation %><br>
   <%= f.password_field :password_confirmation %><br><br>
   
   <%= f.label :phone %><br>
   <%= f.text_field :phone , placeholder:"00-000-000 or without -" %><br><br>

   <%= f.label :date_of_birth %><br>
   <%= f.date_field :date_of_birth %><br><br>

   <%= f.label :address %><br>
   <%= f.text_field :address %><br>
   <br>
   <%= f.submit  %>
<% end %>